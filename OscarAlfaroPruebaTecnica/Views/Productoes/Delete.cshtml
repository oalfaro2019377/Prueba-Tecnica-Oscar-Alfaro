@model OscarAlfaroPruebaTecnica.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Producto</h1>

<h3>¿Estás seguro de eliminar a este producto del sistema?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionProducto)
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            Q @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Unidades
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            IVA
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Iva) %
        </dd>
        <dt class = "col-sm-2">
            Peso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Peso) lbs
        </dd>
        <dt class = "col-sm-2">
            Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMarcaNavigation.DescripcionMarca)
        </dd class>
        <dt class = "col-sm-2">
            Proveedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProveedorNavigation.DescripcionProveedor)
        </dd class>
        <dt class = "col-sm-2">
            Presentación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPresentacionNavigation.DescripcionPresentacion)
        </dd class>
        <dt class = "col-sm-2">
            Zona
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdZonaNavigation.DescripcionZona)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </form>
</div>
