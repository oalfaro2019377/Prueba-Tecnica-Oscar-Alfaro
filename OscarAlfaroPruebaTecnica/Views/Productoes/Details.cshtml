@model OscarAlfaroPruebaTecnica.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Reporte del Producto</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionProducto)
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            Q @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Unidades
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            IVA
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Iva) %
        </dd>
        <dt class = "col-sm-2">
            Peso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Peso)
        </dd>
        <dt class = "col-sm-2">
            Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMarcaNavigation.DescripcionMarca)
        </dd>
        <dt class="col-sm-2">
            Proveedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProveedorNavigation.DescripcionProveedor)
        </dd>
        <dt class = "col-sm-2">
            Presentación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPresentacionNavigation.DescripcionPresentacion)
        </dd>
        <dt class = "col-sm-2">
            Zona
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdZonaNavigation.DescripcionZona)
        </dd>
    </dl>
</div>
