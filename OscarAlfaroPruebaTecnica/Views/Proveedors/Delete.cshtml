@model OscarAlfaroPruebaTecnica.Models.Proveedor

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Proveedor</h1>

<h3>¿Estás seguro de eliminar a este proveedor del sistema?</h3>
<div>
    <h4>Proveedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionProveedor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProveedor" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </form>
</div>
